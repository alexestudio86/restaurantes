---

import VersionApbModel from "@components/planBasic/pbModels/VersionA/index.astro";
import VersionBpbModel from "@components/planBasic/pbModels/VersionB/index.astro";
import VersionCpbModel from "@components/planBasic/pbModels/VersionC/index.astro";

import { getPageData } from "@/lib/getPageData.js";
import {versions} from "@/lib/versions.js";

export async function getStaticPaths() {0
  return versions.map((version) => ({
    params: { version },
  }));
}

const { version } = Astro.params;
const data = await getPageData();

const modelLayouts = {
  "modelo-a": VersionApbModel,
  "modelo-b": VersionBpbModel,
  "modelo-c": VersionCpbModel,
};

const ModelLayout = modelLayouts[version];

---

{
  ModelLayout && (
    <ModelLayout data={data}/>
  )
}